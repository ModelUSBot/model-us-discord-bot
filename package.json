{
  "name": "model-us-discord-bot",
  "version": "1.0.0",
  "description": "A comprehensive Discord bot for Model US server management with nation statistics, user activity tracking, disaster simulation, and war management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "deploy-commands": "ts-node src/deploy-commands.ts",
    "postinstall": "npm run build"
  },
  "keywords": [
    "discord",
    "bot",
    "model-us",
    "statistics",
    "simulation",
    "typescript"
  ],
  "author": "Model US Server",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "date-fns-tz": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.25",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "fast-check": "^3.15.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": "20.x"
  }
}
